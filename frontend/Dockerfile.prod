# Stage 1: build
FROM node:22-alpine AS build

WORKDIR /frontend
COPY package*.json ./
RUN npm install
COPY . .
RUN npm run build

# Stage 2: nginx
FROM nginx:alpine

# Copy built frontend to nginx
COPY --from=build /frontend/dist /usr/share/nginx/html

# Add custom nginx config
COPY ./nginx/nginx.conf /etc/nginx/conf.d/default.conf
